# Application
APP_NAME=LogicPanel
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/logicpanel
APP_TIMEZONE=Asia/Dhaka

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=logicpanel
DB_USERNAME=root
DB_PASSWORD=578496

# Encryption
APP_KEY=base64:CHANGE_THIS_TO_RANDOM_32_BYTE_KEY
ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_SODIUM_KEY

# JWT
JWT_SECRET=CHANGE_THIS_TO_RANDOM_JWT_SECRET
JWT_EXPIRY=3600
JWT_REFRESH_EXPIRY=604800

# Docker
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_NETWORK=logicpanel_network
USER_APPS_PATH=/var/www/logicpanel/storage/user-apps

# Database Containers (Internal Network)
MYSQL_CONTAINER=logicpanel_mysql
MYSQL_INTERNAL_HOST=mysql
MYSQL_INTERNAL_PORT=3306
MYSQL_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

POSTGRES_CONTAINER=logicpanel_postgres
POSTGRES_INTERNAL_HOST=postgres
POSTGRES_INTERNAL_PORT=5432
POSTGRES_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

MONGO_CONTAINER=logicpanel_mongo
MONGO_INTERNAL_HOST=mongo
MONGO_INTERNAL_PORT=27017
MONGO_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# DB Provisioner Service
DB_PROVISIONER_URL=http://localhost:3001
DB_PROVISIONER_SECRET=CHANGE_THIS_SECRET

# File Manager
FILE_MANAGER_MAX_SIZE=10485760
FILE_MANAGER_ALLOWED_EXTENSIONS=js,py,json,txt,md,yml,yaml,env,html,css

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_PATH=storage/logs

# WHMCS Integration
WHMCS_API_URL=
WHMCS_API_KEY=
WHMCS_API_SECRET=

# Resource Limits (Default)
DEFAULT_CPU_LIMIT=0.5
DEFAULT_MEMORY_LIMIT=512M
DEFAULT_DISK_LIMIT=1G
