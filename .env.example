# Application
APP_NAME=LogicPanel
APP_ENV=production
APP_DEBUG=false
APP_URL=https://panel.yourdomain.cloud
APP_TIMEZONE=UTC

# Panel Ports
MASTER_PORT=967
USER_PORT=676

# Database
DB_CONNECTION=mysql
DB_HOST=logicpanel_db
DB_PORT=3306
DB_DATABASE=logicpanel
DB_USERNAME=lp_user
DB_PASSWORD=secret

# Encryption & Secrets
JWT_SECRET=CHANGE_THIS_TO_RANDOM_JWT_SECRET
ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_SODIUM_KEY

# Docker
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_NETWORK=nginx-proxy_web
USER_APPS_PATH=/var/www/html/storage/user-apps

# Database Microservice
DB_PROVISIONER_URL=http://db-provisioner:3001
DB_PROVISIONER_SECRET=CHANGE_THIS_SECRET

# Internal Services
REDIS_HOST=redis
REDIS_PORT=6379

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=info
LOG_PATH=storage/logs
